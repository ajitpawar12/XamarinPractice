<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFApp.Views.UserDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding SpeakerImageUrl}"></Image>
            <Label Text="Speaker Name" TextColor="Tomato"></Label>
            <Label Text="{Binding SpeakerName}"/>
            <Label Text="Speaker Topic" TextColor="Tomato"></Label>
            <Label Text="{Binding SpeakerTopic}"/>
            <Label Text="Topic Dscription" TextColor="Tomato"></Label>
            <Label Text="{Binding SpeakerDescription}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>